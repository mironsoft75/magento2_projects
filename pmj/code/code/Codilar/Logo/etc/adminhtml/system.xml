<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="codilar" translate="label" sortOrder="999" class="codilar-tab">
            <label>Codilar Settings</label>
        </tab>
        <section id="codilar_admin" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
            <resource>Codilar_Logo::config</resource>
            <class>separator-top</class>
            <label>Backend Logo</label>
            <tab>codilar</tab>
            <group id="logo_group" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="admin_login" translate="label comment" type="image" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Admin Login Image</label>
                <backend_model>Codilar\Logo\Model\Config\Backend\Image</backend_model>
                <base_url type="media" scope_info="1">admin/admin/logo</base_url>
                </field>
                <field id="admin_main_menu" translate="label comment" type="image" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Admin Menu Image</label>
                    <backend_model>Codilar\Logo\Model\Config\Backend\Image</backend_model>
                    <base_url type="media" scope_info="1">admin/admin/logo</base_url>
            </field>
            </group>
        </section>
    </system>
</config>
