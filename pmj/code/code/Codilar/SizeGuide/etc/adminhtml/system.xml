<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="codilar" translate="label" sortOrder="10">
            <label>Codilar</label>
        </tab>
        <section id="sizeguide" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>size-guide</class>
            <label>Size Guide</label>
            <tab>codilar</tab>
            <resource>Codilar_SizeGuide::size_guide_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ring_attribute_set_id" translate="label" type="text"  sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Attribute Set Id for Ring</label>
                    <comment>Add Attribute Set Id for Ring Size Guide.ex: 1,2</comment>
                </field>
                <field id="bangle_attribute_set_id" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Attribute Set Id for Bangle</label>
                    <comment>Add Attribute Set Id for Bangle Size Guide.ex: 1,2</comment>
                </field>
            </group>
        </section>
    </system>
</config>