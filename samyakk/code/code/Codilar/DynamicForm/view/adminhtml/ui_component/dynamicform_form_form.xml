<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">dynamicform_form_form.dynamicform_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Codilar\DynamicForm\Block\Adminhtml\Form\Edit\SaveButton"/>
            <button name="delete" class="Codilar\DynamicForm\Block\Adminhtml\Form\Edit\DeleteButton"/>
            <button name="back" class="Codilar\DynamicForm\Block\Adminhtml\Form\Edit\BackButton"/>
        </buttons>
        <namespace>dynamicform_form_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>dynamicform_form_form.dynamicform_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="dynamicform_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="dynamicform/form/save"/>
        </settings>
        <dataProvider class="Codilar\DynamicForm\Model\Form\DataProvider" name="dynamicform_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is Active</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="title" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Form Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>
        <field name="identifier" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Identifier</label>
                <dataScope>identifier</dataScope>
            </settings>
        </field>
        <field name="response_message" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Response Message</label>
                <notice translate="true"><![CDATA[
                    You may use variables in the message. For eg, "An email has been sent to {{var email}}, where 'email' is the name of the field in the form submitted"
                ]]></notice>
                <dataScope>response_message</dataScope>
            </settings>
        </field>
        <field name="store_views"  sortOrder="60" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_views</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Cms\Ui\Component\Listing\Column\Cms\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="form_placement" sortOrder="70" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Form Placement</label>
                <dataScope>form_placement</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Codilar\DynamicForm\Model\Config\Source\FormPlacement"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="email_template" sortOrder="73" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email Template</label>
                <notice translate="true"><![CDATA[
Email will be sent to all email IDs mentioned in the "Send Email Copy To" field
                ]]></notice>
                <dataScope>email_template</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Codilar\DynamicForm\Model\Config\Source\EmailTemplate"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="email_sender" sortOrder="74" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email Sender</label>
                <dataScope>email_sender</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Codilar\DynamicForm\Model\Config\Source\EmailSender"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="send_email_copy_to" sortOrder="74" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <notice><![CDATA[
Comma separated. Use <b>%email</b> to send email to value of the field "email" in the response. Leave blank for not sending order copy to anyone
                ]]></notice>
                <label translate="true">Send Email Copy To</label>
                <dataScope>send_email_copy_to</dataScope>
            </settings>
        </field>
        <htmlContent name="form_elements">
            <argument name="block" xsi:type="object">Codilar\DynamicForm\Block\Adminhtml\Form\Field\FormElements</argument>
        </htmlContent>
        <field name="form_element_ids" sortOrder="100" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>form_element_ids</dataScope>
            </settings>
        </field>
        <field name="form_css" sortOrder="75" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Form CSS</label>
                <dataScope>form_css</dataScope>
            </settings>
        </field>
        <field name="content" sortOrder="80" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">form</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <label/>
                <label translate="true">Content</label>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
