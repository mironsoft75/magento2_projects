<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="codilar" translate="label" sortOrder="100" class="codilar-tab">
            <label>Codilar Settings</label>
        </tab>
        <section id="footer_api" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
            <resource>Codilar_Core::codilar</resource>
            <class>separator-top</class>
            <label>Footer Settings</label>
            <tab>codilar</tab>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Footer Configuration</label>
                <field id="footer_block" translate="label, comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Select Footer Block</label>
                    <source_model>Codilar\Cms\Model\Config\Source\Blocks</source_model>
                    <comment>This block will be sent via API for Footer.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
